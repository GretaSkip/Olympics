@model SportModel

<h4>Enter Sport</h4>


@using (Html.BeginForm("Create", "Sport", FormMethod.Post))
{
    <div class="container-full" style="background-color: white; padding: 20px">
        <div class="container">
            @Html.LabelFor(x => x.Name, "Sport")
            @Html.TextBoxFor(x => x.Name)
            @Html.LabelFor(x => x.TeamActivity, "Team")
            @Html.CheckBoxFor(x => x.TeamActivity)
           
            <input type="submit" value="Submit" />
        </div>
    </div>
}